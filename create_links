#/bin/bash

files=(Rprofile Xresources ackrc autostart bash_aliases bash_profile bashrc conkyrc gtkrc-2.0 gvimrc muttrc rat-hack tmux.conf vim vimrc xinerama xinitrc xscreensaver zshrc)

dir=`pwd`

for file in ${files[@]}; do
    source="$dir/$file"
    dest="$HOME/.$file"

    if [ ! -e $source ]; then
       echo "Source '$source' not found" 
       continue
    fi

    if [ -L "$dest" ]; then
        rm "$dest"
    fi
    if [ -e "$dest" ]; then
	echo "'$dest' already in place"
	continue
    fi

    ln -s "$source" "$dest"
    echo "Created link '$source'"
done

exit 0
