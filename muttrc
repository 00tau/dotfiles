#year: 2012

#source "gpg2 -dq ~/.my-pwds.gpg |"

# IMAP settings
#
set imap_user = "generalmodels@gmail.com"
#set imap_pass = $my_pw_gmail

set smtp_url = "smtp://generalmodels@smtp.gmail.com:587/"
set smtp_pass = $my_pw_gmail 
set ssl_force_tls = yes
set from = "friedrich@statistik.tu-dortmund.de"
set realname = "Thomas Friedrich"

set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed="+[Gmail]/Drafts"

set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates

set move = no

set sort = 'threads'
set sort_aux = 'last-date-received'
set imap_check_subscribed

ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc

mailboxes = "+INBOX"

# allow Mutt to open new imap connection automatically
unset imap_passive

# keep imap connection alive by polling intermittently (time in seconds)
set imap_keepalive = 300

# how often to check for new mail (time in seconds)
set mail_check = 120

# UTF8 Encoding
#
set charset="utf-8"
set send_charset="utf-8"

# Pager
#
set tilde # vim-style
set mailcap_path = ~/.dotfiles/mailcap
auto_view text/html application/pdf application/x-tex
alternative_order text/plain text/html application/pdf application/x-tex

bind pager <up> half-up
bind pager <down> half-down

# VIM Editor
#
set fast_reply          # don't ask for To: Subject:
set edit_headers = yes  # allow for editing headers
set include = yes       # include test in reply
set reply_to = ask-yes  # check reply address
set editor="gvim -f +/'^$' -c:noh" # -c:startinsert

set print_command="muttprint %s"
set print = yes

# Die Standart-Antwortzeile
set attribution="Hallo %v,\n\n* %n [%[%d.%m.%y %H:%M]]:\n"

# Der Absender steht nicht in der Group-Reply-Liste
unset metoo 

# Aliases
#
set alias_file = "~/Dropbox/.aliases"
set sort_alias = alias
set reverse_alias = yes
source $alias_file

# Colours
#
#source ~/.dotfiles/mutt-colour-theme
#source ~/.dotfiles/mutt-colors-solarized/mutt-colors-solarized-light-16.muttrc
